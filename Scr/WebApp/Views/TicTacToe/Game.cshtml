@model GameEngine.TicTacToe


<html>
<head>
    @*<link href="reset.css" rel="stylesheet" />*@
    <link href="~/Content/Game.css" rel="stylesheet" type="text/css" />
</head>
<body>



    <h1>Tic Tac Toe</h1>

    <div id="board" class="gameBox">

        @for (int i = 0; i < 9; i++)
        {
            if (i != 2 && i != 5)
            {
                <a href="/TicTacToe/Game?fieldId=@i" style="background-image:url(/Content/@Model.GameBoard.Fields[i]);"></a>
            }

            else
            {
                <a href="/TicTacToe/Game?fieldId=@i" style="background-image:url(/Content/@Model.GameBoard.Fields[i]"></a><br />
            }
        }

        @*<div id="hejhej"  style="background-image: url(/Content/X.png);"></div>*@

    </div>
    <a id="play" href="/TicTacToe/Game">Can I Play?</a>

    <h2>@Model.Result</h2>
    <div class="resultBox">
        <table id="scoreBox">
            <thead>Score</thead>
            <tr>
                <td>@Model.Players[0].Name</td>
                <td>
                    @for (int i = 0; i < Model.Players.Count; i++)
                    {
                        if (i == 1)
                        {
                            @Model.Players[i].Name
                        }
                    }
                </td>



                <td>Tie</td>
            </tr>
            <tr>
                <td id="Player1">0</td>
                <td id="Player2">0</td>
                <td id="Ties">0</td>
            </tr>
        </table>

        <div class="bar"><h3>( X ) It's your turn!</h3></div>

    </div>



    <div class="bar"><h4>// made by Top Four Game Developers \\</h4></div>





</body>
</html>