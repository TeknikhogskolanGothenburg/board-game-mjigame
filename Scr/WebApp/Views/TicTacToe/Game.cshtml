@model WebApp.Models.Gameboard

<html>
<head>
    <link href="reset.css" rel="stylesheet" />
    <link href="~/Content/Game.css" rel="stylesheet" type="text/css" />
</head>
<body>



    <h1>Tic Tac Toe</h1>

            <div id="board" class="gameBox">

                        <a href="/TicTacToe/Game?fieldId=0" style=" background:url(Content/X.png);"></a> 

                        <a href="/TicTacToe/Game?fieldId=1" style="background-color:@Model.FieldColor[1]"></a> 
                        <a href="/TicTacToe/Game?fieldId=2" style="background-color:@Model.FieldColor[2]"></a> <br />
                  
                 
                        <a href="/TicTacToe/Game?fieldId=3" style="background-color:@Model.FieldColor[3]"></a> 
                        <a href="/TicTacToe/Game?fieldId=4" style="background-color:@Model.FieldColor[4]"></a> 
                        <a href="/TicTacToe/Game?fieldId=5" style="background-color:@Model.FieldColor[5]"></a> <br />
                    
                   
                        <a href="/TicTacToe/Game?fieldId=6" style="background-color:@Model.FieldColor[6]"></a> 
                        <a href="/TicTacToe/Game?fieldId=7" style="background-color:@Model.FieldColor[7]"></a> 
                        <a href="/TicTacToe/Game?fieldId=8" style="background-color:@Model.FieldColor[8]"></a>
                    
                
            </div>




            <div class="resultBox">
                <table id="scoreBox">
                    <thead>Score</thead>
                    <tr>
                        <td>@ViewBag.Player1</td>
                        <td>@ViewBag.Player2</td>
                        <td>Tie</td>
                    </tr>
                    <tr>
                        <td id="Player1">0</td>
                        <td id="Player2">0</td>
                        <td id="Ties">0</td>
                    </tr>
                </table>

                <div class="bar"><h3>( X ) It's your turn!</h3></div>

            </div>



            <div class="bar"><h4>// made by Top Four Game Developers \\</h4></div>





</body>
</html>